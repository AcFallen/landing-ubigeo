---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "API Ubigeo Perú — Departamentos, Provincias y Distritos",
  description = "Consulta los 25 departamentos, 196 provincias y 1 874 distritos del Perú con esta API REST gratuita. Sin autenticación ni límites de uso. Ideal para desarrolladores.",
} = Astro.props;

const canonicalURL = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).href
  : null;

const schemaData = {
  "@context": "https://schema.org",
  "@type": "WebApplication",
  "name": "Ubigeo Perú API",
  "description": description,
  ...(canonicalURL && { "url": canonicalURL }),
  "applicationCategory": "DeveloperApplication",
  "operatingSystem": "All",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
  },
  "inLanguage": "es-PE",
};
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="es_PE" />
    <meta property="og:site_name" content="Ubigeo Perú API" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify(schemaData)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  *, *::before, *::after {
    box-sizing: border-box;
  }
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
    background: #fff;
    color: #111827;
  }
</style>
